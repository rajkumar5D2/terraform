pipeline {
    agent { node {label 'node-2'} }
    options{
        ansiColor('xterm')
    }

    stages {
        stage('init') {
            steps {
              sh '''
                cd roboshop-infra-standard/01-vpc 
                pwd
                terraform init
              '''
            }
        }
        stage('plan') {
            steps {
              sh ''' 
                cd roboshop-infra-standard/01-vpc 
                pwd
                terraform plan
              '''}
        }    
        stage('approve'){
            steps{
                input 'shall i approve?'
            }
        }  
        stage('apply'){
            steps{
                sh '''
                cd roboshop-infra-standard/01-vpc
                terraform apply -auto-approve
                '''
            }
        }
    }

}